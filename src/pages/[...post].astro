---
import Layout from "@/layouts/Layout.astro";
import PostLayout from "@/layouts/PostLayout.astro";
import { getCollection, render } from "astro:content";

export async function getStaticPaths() {
  const posts = await getCollection("posts");

  return posts.map((post) => {
    const params = {
      post: post.slug,
    };

    const props = {
      post,
    };

    const paths = {
      params,
      props,
    };

    return paths;
  });
}

const { post } = Astro.props;
const { data, body } = post;
const { Content } = await render(post);

const structuredData = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "@id": Astro.url,
  headline: data.h1,
  author: {
    "@type": "Person",
    name: data.author,
    sameAs: [
      "https://www.linkedin.com/in/laura-buend%C3%ADa-8a1b86197/",
      "https://lauraperitomedico.com/sobre-mi/",
    ],
  },
  datePublished: data.datePublished.toISOString(),
  dateModified: data.dateModified.toISOString(),
  potentialAction: [
    {
      "@type": "ReadAction",
      target: [Astro.url],
    },
  ],
  image: `${Astro.url.origin}/${data.image}`,
  articleSection: data.category,
  description: data.description,
  wordCount: data.wordCount,
  url: Astro.url,
  mainEntityOfPage: {
    "@type": "WebPage",
    "@id": Astro.url,
    name: data.h1,
  },
};
---

<Layout
  ogImage={`/img/blog/${data.image}`}
  bodyClass="post"
  metaTitle={data.metaTitle}
  metaDescription={data.metaDescription}
>
  <PostLayout body={body} post={post}>
    <Content />
  </PostLayout>

  <script
    is:inline
    type="application/ld+json"
    set:html={JSON.stringify(structuredData)}
  />
</Layout>
