---
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";
import { MainModalForm } from "@/components/preact/MainModalForm";
import "@/styles/global.css";
import "@/styles/utils.css";
import { ClientRouter } from "astro:transitions";
import logo from "@/assets/mark/favicon.png";
import FloatMobileBtn from "@/components/FloatMobileBtn.astro";

interface Props {
  bodyClass?: string;
  metaTitle: string;
  metaDescription: string;
}

const {
  bodyClass,
  metaDescription,
  metaTitle = "Add Meta Title",
} = Astro.props;

const { pathname } = Astro.url;
const ogType = pathname === "/" ? "website" : "article";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="robots" content="noindex, nofollow" />
    <meta name="description" content={metaDescription} />
    <meta property="og:title" content={metaTitle} />
    <meta property="og:description" content={metaDescription} />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:type" content={ogType} />
    <meta property="og:site_name" content="Laura Buendía - Perito Médico" />

    <link rel="canonical" href={Astro.url} />
    <link
      rel="preload"
      href="/fonts/Poppins-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/fonts/Poppins-SemiBold.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <ClientRouter />
    <title>{metaTitle}</title>
  </head>
  <body class={bodyClass}>
    <Header />
    <main>
      <slot />
    </main>
    <MainModalForm client:only />
    <FloatMobileBtn />
    <Footer />
  </body>
</html>

<script>
  import { disableBodyScroll } from "@/helpers/disableBodyScroll";

  document.addEventListener("astro:page-load", () => {
    disableBodyScroll();
  });
</script>
