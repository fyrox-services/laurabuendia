---
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";
import { MainModalForm } from "@/components/preact/MainModalForm";
import "@/styles/global.css";
import "@/styles/utils.css";
import { ClientRouter } from "astro:transitions";
import logo from "@/assets/mark/logo.png";
import FloatMobileBtn from "@/components/FloatMobileBtn.astro";

interface Props {
  bodyClass?: string;
}

const { bodyClass } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href={logo.src} />
    <meta name="robots" content="noindex, nofollow" />
    <link
      rel="preload"
      href="/fonts/Poppins-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/fonts/Poppins-SemiBold.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <ClientRouter />
    <title>Astro Basics</title>
  </head>
  <body class={bodyClass}>
    <Header />
    <main>
      <slot />
    </main>
    <MainModalForm client:load />
    <FloatMobileBtn />
    <Footer />
  </body>
</html>

<script>
  import { disableBodyScroll } from "@/helpers/disableBodyScroll";

  document.addEventListener("astro:page-load", () => {
    disableBodyScroll();
  });
</script>
