---
import { Image } from "astro:assets";
import abovePhoto from "@/assets/mark/laura.jpg";
import { MainCTA } from "@/components/preact/Buttons";
// import ContactWays from "@/components/ContactWays.astro";
---

<section class="bg-gradient-circle">
  <div class="wrapper above-wrap">
    <div class="presentation">
      <span class="name">laura buendía</span>
      <h1 class="text-gradient-primary">perito médico</h1>
      <p>
        Lorem ipsum dolor sit amet consectetur adipisicing elit. Sequi
        obcaecati, sapiente, ab porro autem inventore a perspiciatis rerum vero
        nesciunt nulla nemo incidunt.
      </p>
      <MainCTA client:load>pedir presupuesto</MainCTA>

      <!-- <ContactWays /> -->
    </div>

    <div class="photo">
      <picture class="image-mask">
        <Image src={abovePhoto} alt="foto de Laura Buendía" />
      </picture>
    </div>
  </div>
</section>

<style>
  section {
    min-height: 100dvh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .above-wrap {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    flex-direction: column;
    gap: 2rem;
    margin-top: calc(var(--header-height) * 1.5);
    padding: 0 0 3rem;
  }

  .presentation {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .name {
    text-transform: capitalize;
    font-family: var(--base-bold);
    font-size: var(--fs-xl);
  }

  h1 {
    font-size: var(--fs-4xl);
    line-height: 1;
  }

  .image-mask {
    width: 15rem;
    height: 15rem;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: var(--radius-full);
    mask-image: linear-gradient(var(--light) 50%, transparent 100%);
  }

  .image-mask img {
    object-fit: cover;
    width: 100%;
    height: 100%;
  }

  /* DESKTOP */
  @media (min-width: 1024px) {
    section {
      margin-top: 0;
    }

    .above-wrap {
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
      padding: 0;
    }

    .image-mask {
      width: 25rem;
      height: 25rem;
    }

    .presentation {
      flex: 0 0 60%;
    }

    .name {
      font-size: var(--fs-xl);
    }

    h1 {
      font-size: var(--fs-6xl);
    }
  }
</style>
