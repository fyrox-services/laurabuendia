---
interface Props {
  modifier?: string;
}

const { modifier = "" } = Astro.props;
---

<div class:list={[modifier]}>
  <slot />
</div>

<style>
  div {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
  }

  div.how-working-section {
    margin: 5rem 0 0;
  }
</style>
