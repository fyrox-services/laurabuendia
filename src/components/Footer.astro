    color: var(--dark-900);
  }

  a {
    display: flex;
    align-items: center;
    font-size: var(--fs-sm);
    color: var(--dark-500);
    transition: color 0.3s ease;
  }

  .contact-nav a {
    color: var(--dark-500);
    font-size: var(--fs-sm);
    display: grid;
    grid-template-columns: min-content 1fr;
    align-items: center;
    gap: 0.5rem;
  }

  .nav-legal {
    border-top: 1px solid var(--gray);
    grid-column: 1 / -1;
    padding: 1rem 0;
    margin: 3rem 0 0;
  }

  @media (min-width: 1024px) {
    .footer-wrap {
      grid-template-columns: repeat(5, 1fr);
    }

    .nav-legal ul {
      display: flex;
      font-size: var(--fs-sm);
      gap: 3rem;
    }

    a:hover,
    .contact-nav a:hover {
      color: var(--primary);
    }
  }
</style>
